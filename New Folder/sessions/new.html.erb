<section class="login">
  <div class="login__imgBx">
    <!--<%#= image_tag 'introduction.jpg' %>-->
  </div>
  <div class="login__contentBx">
    <div class="login__formBx">
      <div class="login__title">ログインu</div>
      <%= render 'shared/flash' %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login__inputBx">
          <%= f.label :email, {class: 'login__label'} %>
          <%= f.email_field :email,
                            autofocus: true,
                            maxlength: '100'
          %>

        </div>

        <div class="login__inputBx">
          <%= f.label :password, {class: 'login__label'} %>
          <%= f.password_field :password,
                                autocomplete: "off",
                                minlength: @minimum_password_length,
                                maxlength: '20'
          %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          <% end %>

        </div>

        <% if devise_mapping.rememberable? %>
          <div class="login__remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me do %>
              <%= resource.class.human_attribute_name('remember_me') %>
            <% end %>
          </div>
        <% end %>

        <div class="login__inputBx">
          <%= f.submit "ログイン" %>
        </div>

        <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "login__guest-user" %>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</section>