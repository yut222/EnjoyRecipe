<% @users.each do |user| %>
  <div class="col-md-6 mb-4">
    <%= link_to(user_path(id: user.id), class: "user-list__item") do %>
      <div class="card">
        <div class="recipelist__flex">
          <%= image_tag user.avatar.url, class:'user-list__img rounded-circle mt-3 mb-3 ml-3', size:"100x100" %>  <!--ユーザー画像-->
          <div class="card-body">
            <div class="user-list__detail">
              <div class="user-list__name"><%= user.name %></div>  <!--ユーザー名-->
              <div class="user-list__count">レシピ投稿数: <%= user.recipes.length %></div>  <!--レシピ投稿数-->
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>