<% @users.each do |user| %>
  <div class="col-md-3 mb-4">
    <%= link_to(user_path(id: user.id), class: "user-list__item") do %>
      <div class="user-list__img">
        <%= image_tag user.avatar.url, class:'user-list__img rounded-circle' %>
      </div>
      <div class="user-list__detail">
        <p class="user-list__name"><%= user.name %></p>
        <p class="user-list__count">レシピ投稿数: <%= user.recipes.length %></p>
      </div>
    <% end %>
  </div>
<% end %>