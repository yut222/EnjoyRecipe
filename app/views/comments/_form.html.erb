<%= form_with(model:[@recipe, @comment], method: :post) do |f| %>
  <%= f.hidden_field :recipe_id, value: @recipe.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :content, "コメント投稿はこちら", class: 'mt-3'%>
  <div class="form-group">
    <%= f.text_area :content, placeholder: "100文字まで入力可能です", class:"form-control introduction" %>
  </div>
  <div class="comment-submit">
    <%= f.button "送信する" , class:"btn btn-outline-primary mb-4" %>
  </div>
<% end %>