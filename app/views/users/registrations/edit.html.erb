<!--<section class="login">-->

<div class="container">
  <div class="row my-4">


    <div class="col-md-7 px-sm-0 d-flex">
      <%= image_tag 'introduction.jpg', size: "600x800" %>
    </div>

    <div class="col-md-5 px-sm-0 align-self-center">
      <div class="text-center mt-2 mb-4">
        <h3>アカウント編集</h3>
      </div>


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>

        <!--<div class="login__inputBx">-->
      <div class="col-md-12">
        <div class="form-group row ms-3">
          <%= f.label :avatar, class: "login__label" %>  <!--プロフィール画像-->

          <!--<div class="login__input-avatar">-->
            <label class="img-file ms-3">
              <i class="fa-solid fa-camera" style="color: #000000;"></i>
              <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", class: "image" %>
            </label>

            <div class="preview login__preview"></div>
            <div class="login__avatar">
              <!--<%#= image_tag resource.avatar.url, class: "set-img" %>-->
            </div>
          </div>
        </div>
        <% if @user.errors.include?(:avatar) %>
          <p class="login__form-error"><%= @user.errors.full_messages_for(:avatar).first %>
        <% end %>

        <div class="form-group">
          <label for="user_name">名前</label>
          <!--<%#= f.label :name, {class: 'login__label'} %>-->
          <!--<%#= f.text_field :name, maxlength: '50' %>-->
          <%= f.text_field :name, maxlength: '50', class:"form-control" %>

          <% if @user.errors.include?(:name) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:name).first %>
          <% end %>
        </div>

        <div class="form-group">
          <label for="email">メールアドレス</label>
          <%= f.email_field :email, maxlength: '100', class:"form-control" %>
          <% if @user.errors.include?(:email) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:email).first %>
          <% end %>
        </div>

        <div class="form-group">
          <label for="password">パスワード（6~20桁の半角英数字）</label>
          <%= f.email_field :email, maxlength: '100', class:"form-control" %>
          <% if @user.errors.include?(:email) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:email).first %>
          <% end %>
        </div>



        <div class="login__inputBx">
          <!--<%#= f.label :password, {class: 'login__label'} %>-->
          <%= f.password_field :password, autocomplete: "off", minlength: @minimum_password_length, maxlength: '20' %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          <% end %>
          <% if @user.errors.include?(:password) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:password).first %>
          <% end %>
        </div>

        <div class="login__inputBx">
          <%= f.label :password_confirmation, {class: 'login__label'} %>
          <%= f.password_field :password_confirmation,
                                autocomplete: "off",
                                minlength: @minimum_password_length,
                                maxlength: '20'
          %>
          <% if @user.errors.include?(:password_confirmation) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:password_confirmation).first %>
          <% end %>
        </div>


            <div class="col-md-12 px-sm-0 d-flex align-items-center justify-content-center">
              <%= f.submit "更新する", class:"btn btn-success offset-4 mt-4" %>
              <%= link_to "退会する", unsubscribe_user_path(@user), class: "withdrawal btn btn-danger ml-5 mt-4" %>
            </div>
    </div>
      <% end %>
    </div>
  </div>
<!--</section>-->