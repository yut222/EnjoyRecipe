<div class="row login__background">
  <div class="col-md-6 px-sm-0 d-flex">
    <%= image_tag 'introduction.jpg', class: "introduction__img" %>
  </div>
  <div class="col-md-6 align-self-center">
    <div class="col-md-10 offset-md-1">
      <div class="text-center mt-4 mb-4">
        <h3>アカウント編集</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :patch}) do |f| %>
        <div class="form-group">
          <%= f.label :avatar, class: "login__label" %><br>  <!--プロフィール画像-->
          <i class="fa-solid fa-camera" style="color: #000000;"></i>
          <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png" %>
          <div class="preview login__preview"></div>
          <div class="login__avatar mt-2">
            <%= image_tag resource.avatar.url, class: "rounded-circle", size: '100x100' %>
          </div>
          <% if @user.errors.include?(:avatar) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:avatar).first %></p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :name, {class: 'login__label'} %>
          <%= f.text_field :name, maxlength: '50', class:"form-control" %>
          <% if @user.errors.include?(:name) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:name).first %></p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :email, {class: 'login__label'} %>
          <%= f.email_field :email, maxlength: '100', class:"form-control" %>
          <% if @user.errors.include?(:email) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:email).first %></p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password, {class: 'login__label'} %>
          <%= f.password_field :password, autocomplete: "off", minlength: @minimum_password_length, maxlength: '20', class:"form-control" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
          <% end %>
          <% if @user.errors.include?(:password) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:password).first %></p>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, {class: 'login__label'} %>
          <%= f.password_field :password_confirmation, autocomplete: "off", minlength: @minimum_password_length, maxlength: '20', class:"form-control" %>
          <% if @user.errors.include?(:password_confirmation) %>
            <p class="login__form-error"><%= @user.errors.full_messages_for(:password_confirmation).first %></p>
          <% end %>
        </div>
        <div class="col-md-12 px-sm-0 d-flex justify-content-center">
          <%= f.submit "更新する", class:"btn btn-outline-success mt-3 mb-4" %>
          <%= link_to "退会する", unsubscribe_user_path(@user), class: "withdrawal btn btn-outline-danger ml-5 mt-3 mb-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>